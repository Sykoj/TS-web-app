@page
@using TableauxIO
@model TsWebApp.Pages.SolutionsListModel
@{
    ViewData["Title"] = "Your solutions";
    
    <style>
        #truthValue {
            width: 50px;
        }
        th, td {
            padding: 15px;
            text-align: left;
        }
    </style>

    <center>
        <table border="1">
            <tr>
                <th>Date</th>
                <th>Formulas</th>
                <th>Solution</th>
            </tr>

            @foreach (var request in Model.UserRequests) {
                <tr>
                    <td>@Html.Encode(request.Date)</td>
                    <td>
                        <ul>
                            @foreach (var unparsedTableauNode in request.RawFormulas) {

                                <li><div>@Html.Encode(unparsedTableauNode.TruthLabel)</div>@Html.Encode(unparsedTableauNode.Formula)</li>
                             }
                        </ul>
                    </td>
                    <td>
                        @{
                            var link = $"Tableau/SolutionView?id={request.Id}&solutionViewType=Text";
                            var url = $"<a href={link}>Show solution as text</a>";
                        }
                        @Html.Raw(url)
                        <br>
                        @{
                            link = $"Tableau/SolutionView?id={request.Id}&solutionViewType=Svg";
                            url = $"<a href={link}>Show solution as svg</a>";
                        }
                        @Html.Raw(url)
                    </td>
                </tr>
            }

        </table>
    </center>
}